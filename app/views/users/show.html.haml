= render 'layouts/header'
= render 'shared/flash'
%div.row
  %div.col-md-6.col-md-offset-3
    %h1 マイページ
    = render 'shared/stats', user: @user
    = render 'shared/follow_form', user: @user if logged_in? 
    %br
    %p= "ユーザ名：#{@user.name}"
    %p= "自己紹介：#{@user.bio}"
    - if current_user?(@user)
      = link_to "編集", edit_user_path(@user.id), class: "btn btn-primary"
    %br
    %br
    %h3 ↓作成した部屋
    %hr
    - @user.hobby_rooms.each do |hobby_room|
      %li= hobby_room.title
    %br
    %h3 ↓参加している部屋
    %hr
    - @user.join_rooms.each do |hobby_room|
      %li= hobby_room.title 
